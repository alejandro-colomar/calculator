#!/usr/bin/make -f


################################################################################
# directories

MODULES_OBJ_DIR	= $(MODULES_DIR)/obj/

OBJ_DIR	= $(MAIN_DIR)/obj/


################################################################################
# dependencies

ALL	= $(BIN_NAME)

MAIN_OBJ_MODS	= modules.o
MAIN_OBJS	= $(OBJ_DIR)/main.o \
			$(patsubst %,$(MODULES_OBJ_DIR)/%,$(MAIN_OBJ_MODS))


################################################################################
# target: dependencies
#	action

all: $(ALL)


$(BIN_NAME): $(MAIN_OBJS)
	$(CC) $^ -o $@ $(LIBS)
	@echo  "\tBIN	$@"
	@echo  ""


################################################################################
######## End of file ###########################################################
################################################################################
